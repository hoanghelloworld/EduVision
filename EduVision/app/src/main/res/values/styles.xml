<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for formatting toolbar buttons using MaterialComponents -->
    <style name="FormattingToolbarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <!-- Fallback style for formatting toolbar buttons using AppCompat -->
    <style name="FormattingToolbarButtonFallback" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Dialog button style -->
    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <!-- Preview card style -->
    <style name="PreviewCard" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>
